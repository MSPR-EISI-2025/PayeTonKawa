  "item": [
    {
      "name": "Get Keycloak Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded",
            "type": "text"
          }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "client_id", "value": "ptk-clients", "type": "text" },
            { "key": "client_secret", "value": "sw8kjWpvSD1YpbDUIf8rlqJWwNF7DsQE", "type": "text" },
            { "key": "grant_type", "value": "password", "type": "text" },
            { "key": "username", "value": "test-user-clients", "type": "text" },
            { "key": "password", "value": "test1234", "type": "text" }
          ]
        },
        "url": {
          "raw": "https://keycloak.lucette-pomponette.fr/realms/PayeTonKawa/protocol/openid-connect/token",
          "protocol": "https",
          "host": ["keycloak", "lucette-pomponette", "fr"],
          "path": ["realms", "PayeTonKawa", "protocol", "openid-connect", "token"]
        }
      }
    },
    {
      "name": "Create Customer",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Alice\",\n  \"username\": \"alice01\",\n  \"firstName\": \"Alice\",\n  \"lastName\": \"Liddell\",\n  \"address_postalCode\": 75001,\n  \"address_city\": \"Paris\",\n  \"profile_firstName\": \"Alice\",\n  \"profile_lastName\": \"Liddell\",\n  \"company_name\": \"Wonderland Ltd.\"\n}"
        },
        "url": {
          "raw": "https://clients.lucette-pomponette.fr/clients",
          "protocol": "https",
          "host": ["clients", "lucette-pomponette", "fr"],
          "path": ["clients"]
        }
      }
    },
    {
      "name": "Get All Customers",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt}}", "type": "text" }
        ],
        "url": {
          "raw": "https://clients.lucette-pomponette.fr/clients?skip=0&take=10&q=alice",
          "protocol": "https",
          "host": ["clients", "lucette-pomponette", "fr"],
          "path": ["clients"],
          "query": [
            { "key": "skip", "value": "0" },
            { "key": "take", "value": "10" },
            { "key": "q", "value": "alice" }
          ]
        }
      }
    },
    {
      "name": "Get Customer by ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt}}", "type": "text" }
        ],
        "url": {
          "raw": "https://clients.lucette-pomponette.fr/clients/1",
          "protocol": "https",
          "host": ["clients", "lucette-pomponette", "fr"],
          "path": ["clients", "1"]
        }
      }
    },
    {
      "name": "Update Customer",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Alice Updated\",\n  \"company_name\": \"New Wonderland Ltd.\"\n}"
        },
        "url": {
          "raw": "https://clients.lucette-pomponette.fr/clients/1",
          "protocol": "https",
          "host": ["clients", "lucette-pomponette", "fr"],
          "path": ["clients", "1"]
        }
      }
    },
    {
      "name": "Delete Customer",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{jwt}}", "type": "text" }
        ],
        "url": {
          "raw": "https://clients.lucette-pomponette.fr/clients/1",
          "protocol": "https",
          "host": ["clients", "lucette-pomponette", "fr"],
          "path": ["clients", "1"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "jwt",
      "value": "<paste-your-keycloak-access-token-here>"
